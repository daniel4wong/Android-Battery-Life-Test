<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BatteryTest" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textSize">14sp</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="materialButtonStyle">@style/BaseButton</item>
    </style>

    <style name="BaseButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="BaseSwitchStyle" parent="android:Widget.Material.CompoundButton.Switch">
        <item name="android:layout_margin">5dp</item>
        <item name="android:switchPadding">5dp</item>
    </style>

    <style name="InputValueTextView" parent="Widget.AppCompat.TextView">
        <item name="fontWeight">700</item>
        <item name="color">@color/black</item>
    </style>
    <style name="SegmentedButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/radio_flat_selector</item>
        <item name="android:textColor">@drawable/radio_flat_text_selector</item>
        <item name="android:button">@android:color/transparent</item>
    </style>
</resources>